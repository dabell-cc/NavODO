#:kivy 1.10.0

<ODOScreen>:
    size:root.size

    BoxLayout:
        orientation:'vertical'
        size:root.size

        Label:
            id:current_revs
            text: str(root.curr_rpm)
            font_size: 88
            center:self.parent.center
        Label:
            id:current_speed
            text: str(root.curr_kph)
            font_size: 88
            center:self.parent.center
        Label:
            id:service_odo
            text: str(root.service_km)
            font_size: 88
            center:self.parent.center
        Gauge:
            id:boost_gauge
            value: root.boost
            max: 15
